<div class="page-header">
  <h1>Listing Boats</h1>
</div>
<%= will_paginate @boats %>
<div class="table-responsive">
  <table class="table table-striped table-condensed table-bordered table-hover">
    <thead>
      <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Name</th>
        <th>Type</th>
        <th>Class</th>
        <th>Sail Number</th>
        <th>Pen Tag</th>
      </tr>
    </thead>
    <tbody>
    <%= content_tag_for(:tr, @boats) do |boat| %>
      <td><%= link_to boat.owner.last_name, person_path(boat.owner.id)+'#tabs-5' %>  </td>
      <td><%= boat.owner.first_name %>  </td>
      <td><%= boat.boat_name %>  </td>
      <td><%= boat.boat_type%>  </td>
      <td><%= boat.boat_class%>  </td>
      <td><%= boat.sail_number%>  </td>
     <td><%= boat.pen_tag %>  </td>
    <% end %>
    </tbody>
</table>
<%= will_paginate @boats %>
</div>
