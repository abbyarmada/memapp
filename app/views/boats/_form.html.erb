<%= semantic_form_for(@boat ) do |form| %>

<%= form.inputs :name => "" do %>
<%= form.input :member_id, :as => :hidden %>
<%= form.input :boat_name, :input_html => { :class => "col-sm-10", :label_class =>  "col-sm-2"   } %>
<%= form.input :boat_type , :as => :select, :collection => Boat.types ,:input_html => {:class => "col-sm-10", :label_class =>  "col-sm-2"   }%>
<%= form.input :boat_class ,:input_html => { :class => "col-sm-10", :label_class =>  "col-sm-2"   }%>
<%= form.input :sail_number,:input_html => { :class => "col-sm-10", :label_class =>  "col-sm-2"   } %>
<%= form.input :pen_tag ,:input_html => { :class => "col-sm-10", :label_class =>  "col-sm-2"   } %>

<% end %>
<%= form.actions do %>
      <%= form.action :submit, :as => :button , :button_html => { :class => "btn btn-primary", :disable_with => 'Wait...' }  %>
    <% end %>
<% end %>