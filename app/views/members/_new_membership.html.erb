<%= form.inputs :name => "Membership Information"  do %>
	<%= form.input :privilege, :include_blank => false , :label => "Membership Class" %>
	<%= form.input :email_renewal %>
	<%= form.input :occupation %>
	<%= form.input :year_joined %>
	<%= form.input :renew_date, :as => :date_select ,:order => [:day, :month, :year]  %>
	<%= form.input :proposed %>
	<%= form.input :seconded%>
<% end %>

<%= form.inputs :name => "Address Details" do %>
	<%= form.input :name_no , :label => 'House Name or Number'%>
	<%= form.input :street1 , :label => 'Street Address Line 1'%>
	<%= form.input :street2 , :label => 'Street Address Line 2'%>
	<%= form.input :town  %>
	<%= form.input :city  %>
	<%= form.input :county  %>
	<%= form.input :postcode %>
	 <% #= form.label :select_country 
	 %> 
	 <br />
	 <!-- Country select does not yet work for Formtastic and Bootstrap... -->
	 <%# fixme %> 
	 
	<%= form.country_select :country, ['Ireland','United Kingdom'] %>
	<br />
	<%#= form.input :country , :priority_countries => ['Ireland','United Kingdom']%>
<% end %>



  <%= form.actions do %>
    <%= form.action :submit, :label => button_label , :button_html => { :class => "btn btn-primary", :disable_with => 'Wait...' } if buttons %>
  <% end %>
