<div id="payment_index_page">
<div class="page-header">
  <%= link_to new_payment_path(:member_id => @person.member_id) ,:class => 'btn  btn-primary', id: 'new_payment', remote: true do %>
    <span class="glyphicon glyphicon-plus"></span>
  New Payment
  <% end %>
  
</div>
<div class="table-responsive" >
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Type</th>
        <th>Year</th>
        <th>Amount</th>
        <th>Membership Class</th>
        <th>Date</th>
        <th>Payment Method</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for(:tr, @payments) do |payment| %>
        <td><%= payment.paymenttype.name%></td>
        <td><%= payment.date_lodged.year %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.privilege.name %></td>
        <td><%= payment.date_lodged.to_date %></td>
        <td><%= payment.payment_method.name %></td>
      <td><%= link_to 'Edit', edit_payment_path(payment), :class => 'btn btn-xs btn-default', remote: true %></td>
      <td><%= link_to 'Delete', payment, method: :delete, data: {
  confirm: "Are you sure you want to delete this payment?" }, :class => 'btn btn-xs btn-danger',remote: true  %></td>
      <% end %>
    </tbody>
  </table>
</div>
</div>
