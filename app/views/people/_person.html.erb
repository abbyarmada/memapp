 <%= semantic_form_for(@person, :namespace => @person.id ) do |f|  %>
  <%= f.inputs :name => "Personal Information"  do %>
    <%= f.input :first_name , :input_html => { :class => "col-sm-10", :label_class =>  "col-sm-2"   } %>
    <%= f.input :last_name , :input_html => { :class => "col-sm-10", :label_class =>  "col-sm-2"   } %>
    <%= f.input :status, :as => :select , :collection => Person.form_status(true), :include_blank => false , :input_html => { :class => "col-sm-02", :label_class =>  "col-sm-2"   } %>
    <%= f.input :email_address, :as => :email , :input_html => { :class => "col-sm-10", :label_class =>  "col-sm-2"   } %>
    <%= f.input :occupation, :required => false, :input_html => { :class => "col-sm-10", :label_class =>  "col-sm-2"   }  %>
    <%= f.input :dob, :as => :date_select ,:order => [:day, :month, :year] ,:include_blank => true , :start_year => Time.now.year - 100 ,:label => 'Date of Birth' , :required => false%>
    <%= f.input :member_id ,:as => :hidden %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button ,:button_html => { :class => "btn btn-primary", :disable_with => 'Wait...' } %>
  <% end %>
<% end %>
