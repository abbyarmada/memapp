<div class="page-header">
  <%= link_to new_subscription_path, :class => 'btn btn-primary', id: "new_link" do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Subscription
  <% end %>
  <h1>Listing subscriptions</h1>
</div>

<div class="table-responsive" id="content_table" >
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Amount</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Membership Class</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @subscriptions) do |subscription| %>
            <td><%= subscription.amount %></td>
            <td><%= subscription.start_date %></td>
            <td><%= subscription.end_date %></td>
            <td><%= subscription.privilege.name %></td>
            <td><%= link_to 'Show', subscription , :class => 'btn btn-default'  %></td>
      <td><%= link_to 'Edit', edit_subscription_path(subscription) , :class => 'btn btn-default' %></td>
        <td><%= link_to 'Delete', subscription, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      <% end %>
    </tbody>
  </table>
</div>
