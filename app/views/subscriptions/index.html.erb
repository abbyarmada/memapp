<div class="page-header">
  <%= link_to new_subscription_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Subscription
  <% end %>
  <h1>Listing subscriptions</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Member Class</th>
        <th>Amount</th>
        <th>Start date</th>
        <th>End date</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @subscriptions) do |subscription| %>
            <td><%= subscription.privilege.name %></td>
            <td><%= subscription.amount %></td>
            <td><%= subscription.start_date %></td>
            <td><%= subscription.end_date %></td>
            <td><%= link_to 'Show', subscription %></td>
        <td><%= link_to 'Edit', edit_subscription_path(subscription), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } , :html_options => { :class => 'btn btn-mini btn-danger'} %></td>
      <% end %>
    </tbody>
  </table>
</div>
