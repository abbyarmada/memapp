<h1>Member Subscriptions</h1>



<table class="listing">
  <tr>
  
<th>Member Class</th> <th>Start</th><th>End</th><th>Amount</th><th></th><th></th></tr>


<% for subscription in @subscriptions %>
  <tr class="<%= cycle('odd', 'even') %>">
    
    <td><%= subscription.privilege.name %> </td> 
    <td><%= subscription.start_date%>  </td>
    <td><%= subscription.end_date%>  </td>
    <td><%= number_to_currency(subscription.amount,:unit => "&euro;" ) rescue nil %>  </td>
    <td><%= link_to 'Edit', edit_subscription_path(subscription) %> </td>
    <td><%= link_to 'Delete', subscription, :confirm => 'Are you sure?', :method => :delete %> </td>

    
  </tr>
  
<% end %>
</table>

<br />

<%= button_to 'New Membership Subscription', new_subscription_path %>


